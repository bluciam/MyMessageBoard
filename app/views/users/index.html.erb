<h1>All Users</h1>

<table class="table table-striped">
<% @users.each do |u| %>
  <tr>
    <td>
      <%= gravatar_for u, size:30 %>
    </td>
    <td>
      <%= u.firstname %>
      <%= u.lastname %>
    </td>
    <td>
      <%= u.email %>
    </td>
    <td>
      Published posts: <%= u.posts.count %>
    </td>
    <td>
      Replies: <%= u.replies.count %>
    </td>
    <td>
      <% if current_user == u %>
        <%= link_to "Edit profile", user_path(u) %>
      <% end %>
    </td>
  </tr>
<% end %>


</table>
